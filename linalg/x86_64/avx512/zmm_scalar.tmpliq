// vim: set syntax=asm :

{{L}}{{label}}:
    vbroadcastss    zmm31, dword ptr [rdi + 8]
    {% if flipped %}
        {% for reg in (from..to) %}
            {{op}}          zmm{{reg}}, zmm{{reg}}, zmm31
        {% endfor %}
    {% else %}
        {% for reg in (from..to) %}
            {{op}}          zmm{{reg}}, zmm31, zmm{{reg}}
        {% endfor %}
    {% endif %}

    jmp    {{L}}non_linear_loop
