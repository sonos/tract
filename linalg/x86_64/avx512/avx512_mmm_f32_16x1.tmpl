{{L}}add_unicast:
    mov     r10,    [rdi + 8]           // c ptr
    mov     rsi,    [rdi + 16]          // row stride

	cmp rsi, 4
	jne {{L}}add_unicast_generic

	vaddps zmm0, zmm0, [r10]

    jmp    {{L}}non_linear_loop

{{L}}add_unicast_generic:
